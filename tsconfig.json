{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "target": "ES2017",
    "lib": [
      "esnext.asynciterable",
      "ES2017",
      "dom",
      "dom.Iterable"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./@types",
      "./node_modules/@types",
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "build",
    "node_modules",
  ]
}